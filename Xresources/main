!URxvt*termName: rxvt-unicode
URxvt*geometry: 90x24
URxvt*loginShell: true
URxvt*buffered: true
URxvt*scrollBar: false
URxvt*iso14755: false
URxvt.iso14755_52: false

! Setup fonts
! Inconsolata, DejaVu Sans
URxvt*font: xft:Inconsolata for Powerline:pixelsize=19:antialias=true, xft:Inconsolata:pixelsize=19, xft:DejaVu Sans Mono:pixelsize=17, xft:Monospace:pixelsize=17

! Perl extensions
URxvt.perl-ext-common: default,clipboard,matcher
URxvt.url-launcher: /usr/bin/firefox
URxvt.matcher.button: 1

!! Tabs (ext: tabbedex)
!URxvt.tabbed.autohide: true
!!URxvt.tabbed.no-tabbedex-keys: true
!URxvt.keysym.Control-Shift-T: perl:tabbedex:new_tab
!URxvt.keysym.Shift-Left: perl:tabbedex:next_tab
!URxvt.keysym.Shift-Right: perl:tabbedex:prev_tab
!URxvt.keysym.Control-Shift-Left: perl:tabbedex:move_tab_left
!URxvt.keysym.Control-Shift-Right: perl:tabbedex:move_tab_right
!URxvt.keysym.Control-Shift-R: perl:tabbedex:rename_tab

! Clipboard (ext: clipboard)
URxvt.clipboard.copycmd: xsel -ib
URxvt.clipboard.pastecmd: xsel -ob
URxvt.keysym.Control-Shift-C: perl:clipboard:copy
URxvt.keysym.Control-Shift-V: perl:clipboard:paste

! Select colorscheme
!#include "dotfiles/Xresources/solarized"
!#include "dotfiles/Xresources/custom_dark"
#include "dotfiles/Xresources/monokai"

