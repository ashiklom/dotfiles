!URxvt*termName: rxvt-unicode
URxvt*geometry: 90x24
URxvt*loginShell: true
URxvt*buffered: true
URxvt*scrollBar: false
URxvt*iso14755: false
URxvt.iso14755_52: false

! Setup fonts
! Inconsolata, DejaVu Sans
URxvt*font: xft:Inconsolata for Powerline:pixelsize=18:antialias=true, xft:Inconsolata:pixelsize=18, xft:DejaVu Sans Mono:pixelsize=15, xft:Monospace:pixelsize=15

! Enable clipboard (default: have to use <S-Insert>)
URxvt.perl-ext-common: default,clipboard
URxvt.keysym.Shift-Control-C: perl:clipboard:copy
URxvt.keysym.Shift-Control-V: perl:clipboard:paste

! Select colorscheme
!#include "dotfiles/Xresources/solarized"
!#include "dotfiles/Xresources/custom_dark"
#include "dotfiles/Xresources/monokai"

